<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@+string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_journal"
    tools:context="com.example.trent.sleepapp.JournalActivity">

    <!--android:background="@drawable/custom_image_button"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed-time Diary"
        android:layout_centerInParent="false"
        android:textSize="36sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/imageButtonTobacco"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/tobacco"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <ImageButton
        android:id="@+id/imageButtonCoffee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/coffee"
        android:layout_alignTop="@+id/imageButtonTobacco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ImageButton
        android:id="@+id/imageButtonMeal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/meal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButtonCoffee"
        android:layout_alignStart="@+id/imageButtonCoffee" />

    <ImageButton
    android:id="@+id/imageButtonExercise"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:src="@drawable/exercise"
    android:layout_alignTop="@+id/imageButtonMeal"
    android:layout_alignLeft="@+id/imageButtonTobacco"
    android:layout_alignStart="@+id/imageButtonTobacco" />

    <ImageButton
        android:id="@+id/imageButtonAlcohol"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/alcohol"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/imageButtonExercise"
        android:layout_alignStart="@+id/imageButtonExercise" />

    <ImageButton
        android:id="@+id/imageButtonPill"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pill"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/imageButtonMeal"
        android:layout_alignStart="@+id/imageButtonMeal" />

    <Button
        android:text="ADD ACTIVITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonAlcohol"
        android:layout_toEndOf="@+id/imageButtonAlcohol" />

</RelativeLayout>
