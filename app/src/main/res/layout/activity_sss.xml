<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAllCaps="false"
    tools:context="com.example.trent.sleepapp.SSSActivity">

    <TextView
        android:text="Pick what best represents how you are feeling "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/sssProg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Feeling active, vital, alert or wide awake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_1"
        android:textAllCaps="false"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Functioning at high levels, but not at peak; able to concentrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_2"
        android:layout_below="@+id/scale_1"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Somewhat foggy, let down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_4"
        android:layout_below="@+id/scale_3"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Awake, but relaxed; responsive but not fully alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_3"
        android:layout_below="@+id/scale_2"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Foggy; losing interest in remaining awake; slowed down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_5"
        android:layout_below="@+id/scale_4"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sleepy, woozy, fighting sleep; prefer to lie down	"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_6"
        android:layout_below="@+id/scale_5"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="No longer fighting sleep, sleep onset soon; having dream-like thoughts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale_7"
        android:textAllCaps="false"
        android:layout_below="@+id/scale_6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<include layout="@layout/progessbar"-->
        <!--android:id="@+id/sssProg"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->
</RelativeLayout>
